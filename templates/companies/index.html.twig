{% extends 'base.html.twig' %}

{% block title %}Companies index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Companies index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Logo</th>
                <th>Website</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.email }}</td>
                <td><img src="/uploads/brochures/{{ company.logo }}" alt="" style="display: block; width: 5rem; height: 5rem;"></td>
                <td>{{ company.website }}</td>
                <td>
                    <a href="{{ path('companies_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('companies_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-md btn-success" href="{{ path('companies_new') }}">Create new</a>
    </div>
{% endblock %}

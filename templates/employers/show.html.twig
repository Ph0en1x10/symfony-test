{% extends 'base.html.twig' %}

{% block title %}Employers{% endblock %}

{% block body %}
    <div class="container mt-5">
    <h1>Employers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employer.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ employer.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ employer.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employer.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ employer.phone }}</td>
            </tr>
            <tr>
                <th>Company_id</th>
                <td>{{ employer.companyId }}</td>
            </tr>
        </tbody>
    </table>
    <div class="inline" style="display: flex; justify-content: space-between;">
    <a class="btn btn-md btn-warning" href="{{ path('employers_index') }}">back to list</a>

    <a class="btn btn-md btn-warning" href="{{ path('employers_edit', {'id': employer.id}) }}">edit</a>

    {{ include('employers/_delete_form.html.twig') }}
    </div>
    </div>
{% endblock %}
